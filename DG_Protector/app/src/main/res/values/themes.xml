<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DG_Protector" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Make launch full screen. -->
        <item name="android:windowFullscreen">true</item>


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kitel_navy_500</item>
        <item name="colorPrimaryVariant">@color/kitel_navy_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="numberPickerCustom">
        <!--Display textSize-->
        <item name="android:textSize">24sp</item>
    </style>
</resources>